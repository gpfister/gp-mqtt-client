FROM ghcr.io/gp-devenv/gp-node-devenv:22.04-18-1

# Switch to root
USER root

# Switch to vscode
USER vscode

# Go to workspace
WORKDIR /workspace

# Trust workspace
RUN git config --global --add safe.directory /workspace

# Expose ports
EXPOSE 80

# Entrypoint
ENTRYPOINT [ "sudo", "/entrypoint.sh" ]